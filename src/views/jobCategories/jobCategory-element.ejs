<div class="category-tag">
  <span><%= category.name_category %></span>

  <form 
    action="/job-category/<%= job.job_id %>/<%= category.category_id %>" 
    method="POST"
    onsubmit="return confirm('Supprimer cette catégorie ?');"
  >
    <input type="hidden" name="_method" value="DELETE">
    <button class="delete-btn" type="submit">×</button>
  </form>
</div>

<style>
.category-tag {
  display: inline-flex;
  align-items: center;
  background: #e8e8e8;
  padding: 6px 10px;
  border-radius: 6px;
  margin: 4px;
}
.delete-btn {
  border: none;
  background: none;
  font-weight: bold;
  font-size: 16px;
  margin-left: 6px;
  cursor: pointer;
  color: #b30000;
}
</style>
