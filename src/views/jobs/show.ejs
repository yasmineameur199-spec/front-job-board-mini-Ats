<h1><%= job.titre %></h1>

<p><strong>Entreprise :</strong> <%= job.company?.name || "N/A" %></p>
<p><strong>Lieu :</strong> <%= job.location %></p>
<p><strong>Type :</strong> <%= job.employment_type %></p>

<% if (currentUser) { %>
  <a
    href="/jobs/<%= job.job_id %>/apply"
    style="display:inline-block;margin-top:16px;padding:10px 14px;font-weight:600;"
  >
    Postuler
  </a>
<% } else { %>
  <p style="margin-top:16px;">
    Vous devez être connecté pour postuler.
    <a href="/login">Connexion</a>
  </p>
<% } %>
