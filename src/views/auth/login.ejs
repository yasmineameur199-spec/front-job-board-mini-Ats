<h1>Connexion</h1>

<% if (error) { %>
  <p style="color: #ef4444; font-weight: 500;"><%= error %></p>
<% } %>

<form action="/login" method="POST" style="max-width: 400px; margin-top: 24px;">
  <div style="margin-bottom: 16px;">
    <label>Email</label><br>
    <input
      name="email"
      type="email"
      required
      style="width: 100%; padding: 10px; margin-top: 6px;"
    >
  </div>

  <div style="margin-bottom: 20px;">
    <label>Mot de passe</label><br>
    <input
      name="password"
      type="password"
      required
      style="width: 100%; padding: 10px; margin-top: 6px;"
    >
  </div>

  <button
    type="submit"
    style="padding: 10px 16px; font-weight: 600; cursor: pointer;"
  >
    Se connecter
  </button>
</form>
