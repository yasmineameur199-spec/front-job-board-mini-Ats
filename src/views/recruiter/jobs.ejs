<h1>Tableau de bord recruteur</h1>

<% if (!jobs || jobs.length === 0) { %>
  <p>Aucune offre trouv√©e.</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Offre</th>
        <th>Entreprise</th>
        <th>Lieu</th>
        <th>Type</th>
        <th>Candidatures</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% jobs.forEach(job => { %>
        <tr>
          <td><%= job.titre %></td>
          <td><%= job.company?.name || "N/A" %></td>
          <td><%= job.location %></td>
          <td><%= job.employment_type %></td>
          <td><%= job.applicationsCount ?? (job.applications ? job.applications.length : 0) %></td>
          <td>
            <a href="/recruiter/jobs/<%= job.job_id %>/applications">
              Voir candidatures
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
